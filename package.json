{
  "name": "music-lyric-kit",
  "version": "2.0.1",
  "author": "Folltoshe",
  "description": "Music Lyric Parser And Writer",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "turbo watch dev",
    "publish": "node ./scripts/publish.js",
    "build": "turbo run build",
    "build:force": "turbo run build --force",
    "build:change-log": "node ./scripts/build-change-log.js",
    "build:change-log:current": "node ./scripts/build-change-log.js --current",
    "update:version": "node ./scripts/update-version.js"
  },
  "type": "module",
  "license": "MIT",
  "keywords": [
    "music",
    "lyric",
    "kit",
    "parser",
    "builder",
    "lrc",
    "qrc",
    "yrc",
    "krc",
    "ttml"
  ],
  "homepage": "https://github.com/folltoshe/music-lyric-kit#readme",
  "bugs": {
    "url": "https://github.com/folltoshe/music-lyric-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/folltoshe/music-lyric-kit.git"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "conventional-changelog-cli": "^5.0.0",
    "enquirer": "^2.4.1",
    "turbo": "^2.5.8",
    "typescript": "5.8.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4"
  }
}
